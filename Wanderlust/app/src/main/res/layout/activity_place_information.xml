<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.uco.dtavarespereira.wanderlust.PlaceInformation"
    android:id="@+id/l">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21 Club"
        android:id="@+id/nameView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21 W 52nd St,New York, NY 10019"
        android:id="@+id/address"
        android:layout_below="@+id/nameView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="126dp"
        android:layout_marginTop="69dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="21club.com"
        android:id="@+id/website"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/address" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(212) 582-7200"
        android:id="@+id/phone"
        android:layout_below="@+id/website"
        android:layout_alignEnd="@+id/website" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See in map"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/phone"
        android:layout_marginBottom="72dp" />

</RelativeLayout>
